<h1>Conversations</h1>

  <div class="conversations">
    <% @conversations.each do |conversation| %>
      <div class="conversation <%= 'unread' if conversation.unread?(current_user) %>">
        <%= avatar_for conversation.user_other_from(current_user), size: 60 %>
        <%= link_to conversation.user_other_from(current_user).name, conversation_messages_path(conversation) %>
        <span><%= time_ago_in_words(conversation.updated_at) %> ago</span>
        <p>
          <strong><%= conversation.last_message.user.first_name %></strong>
          <%= conversation.last_message.body %></p>
      </div>
    <% end %>
  </div>