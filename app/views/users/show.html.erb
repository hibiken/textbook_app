<% provide(:title, @user.name) %>
<div class="row">

  <aside class="col-md-12">
    <section class="user_info">
      <h1>
        <%= avatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <% if current_user?(@user) %>
      <%= link_to "Edit Profile", edit_user_path(current_user), class: 'button-primary button-top-right btn' %>
    <% end %>
  </aside>
  <div class="col-md-12">
    <ul class="listings">
      <% @user.textbooks.each do |textbook| %>
        <li class="item">
          <div>
            <h3 class="title"><%= link_to textbook.title, textbook %></h3>
            <%= render 'shared/price_tag', object: textbook %>
            <p><%= textbook.description %></p>
            <% if current_user?(@user) %>
              <%= link_to "Edit", edit_textbook_path(textbook), class: 'button-primary btn edit-button' unless textbook.sold? %>
              <%= link_to "Take this off", textbook_path(textbook), method: :delete, class: 'button-primary btn delete-button' %>
              <%= link_to "Mark as sold", sold_textbook_path(textbook), method: :post, class: 'button-primary btn' unless textbook.sold? %>
            
              <nav class="social_share">
                <span class="icon-facebook2" onclick="javascript:window.open('http://www.facebook.com/sharer.php?u=<%= url_for([textbook, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0)"></span>
                <span class="icon-twitter" onclick="javascript:window.open('http://twitter.com/share?text=Anyone needs <%= textbook.title %> textbook?- &amp;url=<%= url_for([textbook, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0)"></span>
                <span class="icon-google-plus" onclick="javascript:window.open('http://plus.google.com/share?url=<%= url_for([textbook, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0)"></span>
              </nav>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>