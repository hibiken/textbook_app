<% provide(:title, @user.name) %>
<div class="row">
  <% if current_user?(@user) %>
    <%= link_to "New Listing", new_textbook_path, class: 'button-primary pull-right' %>
  <% end %>
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-12">
    <ul class="listings">
      <% @user.textbooks.each do |textbook| %>
        <li class="item">
          <div>
            <h3 class="title"><%= textbook.title %></h3>
            <span class="price pull-right"><%= number_to_currency(textbook.price) %></span>
            <p><%= textbook.description %></p>
            <% if current_user?(@user) %>
              <%= link_to "Edit", edit_textbook_path(textbook), class: 'button-primary' %>
              <%= link_to "Take this off", textbook_path(textbook), method: :delete, class: 'button-success' %>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>