<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <% if current_user?(@user) %>
      <%= link_to "New Listing", new_textbook_path, class: 'button-primary' %>
    <% end %>
  </aside>
</div>