<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <% if current_user?(@user) %>
      <%= link_to "New Listing", new_textbook_path, class: 'button-primary' %>
    <% end %>
  </aside>
  <div class="col-md-12">
    <ul>
      <% @user.textbooks.each do |textbook| %>
        <li>
          <div>
            <h3><%= textbook.title %></h3>
            <span><%= number_to_currency(textbook.price) %></span>
            <% if current_user?(@user) %>
              <%= link_to "Edit", edit_textbook_path(textbook), class: 'button-primary' %>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>