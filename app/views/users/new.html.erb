<% provide(:title, 'Sign up') %>



<div class="row">
  <div class="col-md-6 col-md-offset-3">
   <div class="panel panel-default form-panel">
     <div class="panel-heading">
      <h1>Sign up</h1> 
     </div>
     <div class="panel-body">
      <%= form_for(@user) do |f| %>
        <%= render 'fields', f: f %>
        <%= f.submit "Create my account", class: 'button-success btn' %>
      <% end %>
     </div>
   </div>
  </div>
</div>