<% provide(:title, "All textbooks") %>
<h1>Textbooks</h1>

<div class="row">
  <div class="col-md-12">
    <% if @textbooks.present? %>
      <ul class="listings">
        <% @textbooks.each do |textbook| %>
          <%= render 'textbook', object: textbook %>
        <% end %>
      </ul>
    <% else %>
      <h3>No Textbook Found</h3>
    <% end %>
  </div>
</div>