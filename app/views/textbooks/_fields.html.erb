<%= render 'shared/error_messages', object: f.object %>

<%= f.label :title %>
<%= f.text_field :title, class: 'form-control' %>

<%= f.label :price %>
<%= f.number_field :price, step: 0.01, class: 'form-control' %>

<%= f.label :subject_id, "Subject" %>
<%= f.collection_select :subject_id, Subject.all, :id, :name, prompt: true %>

<%= f.label :course_id, "Course name" %>
<%= f.collection_select :course_id, Course.all, :id, :name, prompt: true %>

<%= f.label :description %>
<%= f.text_area :description, cols: 40, rows: 10, class: 'form-control', placeholder: 'Example: Required for English 101, good condition...' %>